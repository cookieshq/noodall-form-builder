<div class="row-fluid">
  <div class="span12">
    <h1 class="pull-left">Listing Forms</h1>
    <div class="btn-group pull-right">
      <%= link_to '<i class="icon-plus"></i> New Form'.html_safe, new_noodall_admin_form_path, :class => 'btn btn-success' %>
    </div>
  </div> <!-- span12 -->
</div> <!-- row-fluid -->

<div class="row-fluid">
  <div class="span12">
   <table border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Email</th>
        <th width="120">Responses</th>
        <th width="45">Delete</th>
      </tr>
    </thead>
    <tbody>
  <% @forms.each do |form| %>
      <tr id="form-<%= form.id %>" class="<%=cycle('odd', 'even')%>">
        <td class="edit"><%= link_to h(form.title), noodall_admin_form_path(form), :class => 'edit', :title => "Edit #{form.title}" %></td>
        <td><%= form.email %></td>
        <td class="child">
          <%= link_to pluralize(form.responses.count, "Response"), noodall_admin_form_form_responses_path(form), :title => "View responses for #{h(form.title)}", :class => 'child-no' %></td>
        <td><%= link_to '<i class="icon-remove"></i>'.html_safe, noodall_admin_form_path(form), :confirm => 'Are you sure?', :method => :delete, :class => 'delete', :title => 'Delete this form' %></td>
      </tr>
  <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th>Title</th>
        <th>Email</th>
        <th width="100">Responses</th>
        <th width="45">Delete</th>
      </tr>
    </tfoot>
  </table>
  </div> <!-- span12 -->
</div> <!-- row-fluid -->
